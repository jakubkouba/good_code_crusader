<ul>
  <% if ::Refinery::Resumes::Admin::EducationsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.resumes_admin_educations_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_resumes_admin_education_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Resumes::Admin::EducationsController.sortable? && ::Refinery::Resumes::Education.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.resumes_admin_educations_path,
                     t('.reorder', what:  "Educations"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.resumes_admin_educations_path,
                      t('.reorder_done', what: "Educations"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>

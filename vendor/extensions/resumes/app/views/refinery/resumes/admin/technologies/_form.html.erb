<%= form_for [refinery, :resumes_admin, @technology] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @technology,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :logo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :logo_id,
               :image => @technology.logo,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.technologies.admin.technologies.technology'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @technology.title) -%>
<% end -%>

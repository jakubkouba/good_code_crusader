<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(education) -%>">
  <span class='title'>
    <%= education.school_name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.resumes_education_path(education), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_resumes_admin_education_path(education), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.resumes_admin_education_path(education), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: education.school_name)}}  ) %>
  </span>
</li>

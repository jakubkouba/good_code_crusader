<ul>
  <% if ::Refinery::Resumes::Admin::ResumesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.resumes_admin_resumes_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_resumes_admin_resume_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Resumes::Admin::ResumesController.sortable? && ::Refinery::Resumes::Resume.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.resumes_admin_resumes_path,
                     t('.reorder', what:  "Resumes"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.resumes_admin_resumes_path,
                      t('.reorder_done', what: "Resumes"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>

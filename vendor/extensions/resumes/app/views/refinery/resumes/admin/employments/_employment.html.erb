<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(employment) -%>">
  <span class='title'>
    <%= employment.company_name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.resumes_employment_path(employment), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_resumes_admin_employment_path(employment), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.resumes_admin_employment_path(employment), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: employment.company_name)}}  ) %>
  </span>
</li>

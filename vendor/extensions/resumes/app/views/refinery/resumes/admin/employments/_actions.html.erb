<ul>
  <% if ::Refinery::Resumes::Admin::EmploymentsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.resumes_admin_employments_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_resumes_admin_employment_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Resumes::Admin::EmploymentsController.sortable? && ::Refinery::Resumes::Employment.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.resumes_admin_employments_path,
                     t('.reorder', what:  "Employments"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.resumes_admin_employments_path,
                      t('.reorder_done', what: "Employments"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>

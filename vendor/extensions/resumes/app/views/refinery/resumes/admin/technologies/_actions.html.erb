<ul>
  <% if ::Refinery::Resumes::Admin::TechnologiesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.resumes_admin_technologies_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_resumes_admin_technology_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Resumes::Admin::TechnologiesController.sortable? && ::Refinery::Resumes::Technology.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.resumes_admin_technologies_path,
                     t('.reorder', what:  "Technologies"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.resumes_admin_technologies_path,
                      t('.reorder_done', what: "Technologies"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
